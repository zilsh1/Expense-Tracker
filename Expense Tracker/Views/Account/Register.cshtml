@model Expense_Tracker.Models.User

@{
    ViewData["PageTitle"] = "Register";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="widget p-5" style="background-color:#212b36">
            <h4 class="mb-4 text-white text-center">Register</h4>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Register" method="post" enctype="multipart/form-data">
                <!-- Profile Image Section -->
                <div class="mb-4 text-center">
                    <label class="form-label text-white d-block mb-2">Profile Image</label>
                    <img src="~/uploads/profile.jpg"
                         alt="Profile"
                         class="img-thumbnail rounded-circle mb-3"
                         style="width:150px; height:150px; object-fit:cover;" />
                    <input type="file" name="ProfileImageFile" class="form-control mt-2" />
                </div>

                <!-- Name Field -->
                <div class="mb-3">
                    <label class="form-label text-white">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label class="form-label text-white">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label class="form-label text-white">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>

                <p class="text-center text-white mt-3">
                    Already have an account? <a href="/Account/Login" class="text-decoration-underline">Login here</a>
                </p>
            </form>
        </div>
    </div>
</div>
